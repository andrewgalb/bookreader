@page
@using BookReader.Models
@model BookReader.Pages.IndexModel


@{
    <style>
        th, td {
            padding: 10px;
        }
    </style>

    <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th></th>
        </tr>
        @foreach (Book b in Model.books)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>
                    <a href="/Details?ISBN=@b.ISBN">Details</a>
                    <a href="/Update?ISBN=@b.ISBN">Update</a>
                    <a href="/Delete?ISBN=@b.ISBN">Delete</a>
                </td>
            </tr>
        }

    </table>
    <br />
    <form action="/Details" method="get">
        Lookup Specific Book ISBN:
        <input name="ISBN" id="ISBN" />
        <button>Lookup</button>
    </form>
    <a href="/Create">Create</a>
}



